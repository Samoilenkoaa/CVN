<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/symptom"
            android:textSize="@dimen/textSize20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            style="tvLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvSymptom" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding12"
            android:text="@string/common_symptoms"
            android:textSize="@dimen/textSize16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSymptom" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin8"
            app:cardCornerRadius="@dimen/cornerRadius20"
            app:cardElevation="@dimen/cardElevation12"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingTop8">

                <TextView
                    android:id="@+id/tvSymptoms"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fever"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPercent"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="87.9%"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvSymptoms" />


                <TextView
                    android:id="@+id/tvDryCough"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dryCough"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSymptoms" />

                <TextView
                    android:id="@+id/tvPercentDryCough"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/dryCoughPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSymptoms" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDryCough" />

                <TextView
                    android:id="@+id/tvFatigue"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fatigue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDryCough" />

                <TextView
                    android:id="@+id/tvPercentFatigue"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/fatiguePercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDryCough" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvFatigue" />

                <TextView
                    android:id="@+id/tvMucusFormation"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mucusFormation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFatigue" />

                <TextView
                    android:id="@+id/tvPercentMucusFormation"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/mucusFormationPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFatigue" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvMucusFormation" />

                <TextView
                    android:id="@+id/tvShortOfBreath"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shortnessBreath"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMucusFormation" />

                <TextView
                    android:id="@+id/tvPercentShortOfBreath"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/shortOfBreaPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMucusFormation" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvShortOfBreath" />

                <TextView
                    android:id="@+id/tvMuscleJointPain"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvShortOfBreath" />

                <TextView
                    android:id="@+id/tvPercentShortnessOfBreath"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/shortnessOfBreathPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvShortOfBreath" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvMuscleJointPain" />

                <TextView
                    android:id="@+id/tvMSoreThroat"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soreThroat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMuscleJointPain" />

                <TextView
                    android:id="@+id/tvPercentMSoreThroat"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/mSoreThroatPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMuscleJointPain" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvMSoreThroat" />

                <TextView
                    android:id="@+id/tvHeadache"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headache"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMSoreThroat" />

                <TextView
                    android:id="@+id/tvPercentHeadache"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/headachePercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMSoreThroat" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvHeadache" />

                <TextView
                    android:id="@+id/tvFever"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fever2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeadache" />

                <TextView
                    android:id="@+id/tvPercentFever"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/feverPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeadache" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvFever" />

                <TextView
                    android:id="@+id/tvNauseaOrVomiting"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nauseaOrVomiting"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFever" />

                <TextView
                    android:id="@+id/tvPercentNauseaOrVomiting"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/nauseaOrVomitingPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFever" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvNauseaOrVomiting" />

                <TextView
                    android:id="@+id/tvTheNoseClogged"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theNoseClogged"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNauseaOrVomiting" />

                <TextView
                    android:id="@+id/tvPercentTheNoseClogged"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/theNoseCloggedPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNauseaOrVomiting" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTheNoseClogged" />

                <TextView
                    android:id="@+id/tvDiarrhea"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diarrhea"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTheNoseClogged" />

                <TextView
                    android:id="@+id/tvPercentDiarrhea"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/diarrheaPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTheNoseClogged" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDiarrhea" />

                <TextView
                    android:id="@+id/tvHemoptysis"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hemoptysis"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDiarrhea" />

                <TextView
                    android:id="@+id/tvPercentHemoptysis"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/HemoptysisPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDiarrhea" />

                <View
                    style="tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvHemoptysis" />


                <TextView
                    android:id="@+id/tvConjunctivitis"
                    style="@style/tvSymptomsLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/conjunctivitis"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHemoptysis" />

                <TextView
                    android:id="@+id/tvPercentConjunctivitis"
                    style="@style/tvSymptomsRight2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="@string/conjunctivitisPercent"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHemoptysis" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/purple_200"
            android:text="@string/IThinkInfectedWhatNow"
            android:textSize="@dimen/textSize34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardSymptoms" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_go_helpTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin10"
            android:layout_marginTop="@dimen/marginTop8"
            android:text="@string/readInformation"
            app:backgroundTint="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>